    {% endfor %}

    <div class="content-body">
        <section id="number-tabs">
            <div class="row">
                <div class="col-12">
                    <div align="center" class="card">
                        <div class="card-content collapse show">
                            {{ form_start(form, {'attr':{'novalidate':'novalidate'}}) }}

                                <br>
                                <h1>Cr√©er Compte</h1>
                                <br>
