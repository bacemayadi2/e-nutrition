{% extends 'front/base.html.twig' %}
{% block Content %}

    <br>
    <h1 align="center">Rechercher votre Nutritionniste</h1>
    <br>

    <div class="app-content content">
        <div class="content-wrapper">

            <div class="content-body"><!-- Basic Tables start -->
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <a class="heading-elements-toggle"><i class="fa fa-ellipsis-v font-medium-3"></i></a>
                                <div class="heading-elements">
                                    <ul class="list-inline mb-0">
                                        <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                                        <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                                        <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                                        <li><a data-action="close"><i class="ft-x"></i></a></li>
                                    </ul>
                                </div>
                            </div>

                            <div class="card-content collapse show">
                                <div class="table-responsive">

                                    <form name="f" action="{{ path('SearchDoctor') }}" >
                                        <div class="form-group col-10 mb-2">
                                            Recherche par:
                                            <select name="searchChoice" class="form-control">
                                                <option >nom</option>
                                                <option >prenom</option>
                                                <option >nom et prenom</option>
                                                <option >ville</option>
                                            </select><br>
                                            <input type="text" placeholder="Search" name="search" class="form-control" required><br>
                                            <input type="submit" value="Search" class="btn btn-primary">
                                        </div>
                                    </form>
                                    <br>
                                    <div class="col-11 mb-2">
                                        <table border="1" cellpadding="50" align="center" class="table">
                                            <thead class="bg-primary white">
                                            <tr>
                                                <th>Nom</th>
                                                <th>Prenom</th>
                                                <th>Sexe</th>
                                                <th>E-Mail</th>
                                                <th>Numéro de téléphone</th>
                                            </tr>
                                            </thead>
                                            <tr {% for u in users %}>
                                                <td>{{ u.nom }}</td>
                                                <td>{{ u.prenom }}</td>
                                                <td>{{ u.sexe }}</td>
                                                <td>{{ u.email }}</td>
                                                <td>{{ u.tel }}</td>
                                            </tr {% endfor %}>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock%}
