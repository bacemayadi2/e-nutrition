{% extends 'front/base.html.twig' %}

{% block Content %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div class="content-body">
        <section id="number-tabs">
            <div class="row">
                <div class="col-12">
                    <div align="center" class="card">
                        <div class="card-content collapse show">
                            {{ form_start(form, {'attr':{'novalidate':'novalidate'}}) }}

                            <br>
                            <h1>Modifier mon compte</h1>
                            <br>
                            <div class="form-group col-10 mb-2">
                                <table class="form-wrap">
                                    <tr>
                                        <td>{{ form_label(form.email, "E-mail: ") }} </td>
                                        <td>{{ form_widget(form.email, {'attr': {'style': 'width: 300px'} + {'class':'form-control'} + {'disabled':'disabled'}}) }}</td>
                                    </tr>
                                    <tr>
                                        <td>{{ form_label(form.nom, "Nom: ") }} </td>
                                        <td>{{ form_widget(form.nom, {'attr': {'style': 'width: 300px'} + {'class':'form-control'}}) }}</td>
                                    </tr>
                                    <tr>
                                        <td>{{ form_label(form.prenom, "Prenom: ") }}</td>
                                        <td>{{ form_widget(form.prenom, {'attr': {'style': 'width: 300px'} + {'class':'form-control'} } )  }}</td>
                                    </tr>
                                    <tr>
                                        <td>{{ form_label(form.sexe, "Sexe: ") }}</td>
                                        <td>{{ form_widget(form.sexe, {'attr': {'style': 'width: 300px'} + {'class':'form-control'} } )  }}</td>
                                    </tr>
                                    <tr>
                                        <td>{{ form_label(form.dateNaiss, "Date de naissance: ") }}</td>
                                        <td>{{ form_widget(form.dateNaiss)  }}</td>
                                    </tr>
                                    <tr>
                                        <td>{{ form_label(form.tel, "Numéro de téléphone: ") }}</td>
                                        <td>{{ form_widget(form.tel, {'attr': {'style': 'width: 300px'} + {'class':'form-control'} } )  }}</td>
                                    </tr>
                                    <tr>
                                        <td>{{ form_label(form.ville, "Ville: ") }}</td>
                                        <td>{{ form_widget(form.ville, {'attr': {'style': 'width: 300px'} + {'class':'form-control'} } )  }}</td>
                                    </tr>
                                    <tr>
                                        <td>{{ form_label(form.adresse, "Adresse: ") }}</td>
                                        <td>{{ form_widget(form.adresse, {'attr': {'style': 'width: 300px'} + {'class':'form-control'} } )  }}</td>
                                    </tr>
                                    <tr>
                                        <td>{{ form_label(form.plainPassword, "Password: ") }}</td>
                                        <td>{{ form_widget(form.plainPassword, {'attr': {'style': 'width: 300px'} + {'class':'form-control'} + {'disabled':'disabled'} } )  }}</td>
                                    </tr>
                                </table>
                            </div>
                            <br>

                            {{ form_widget(form.Modifier, {'attr':{'class':'btn btn-primary'}}) }}

                            {{ form_errors(form.email) }}
                            {{ form_errors(form.nom) }}
                            {{ form_errors(form.prenom) }}
                            {{ form_errors(form.sexe) }}
                            {{ form_errors(form.tel) }}
                            {{ form_errors(form.ville) }}
                            {{ form_errors(form.adresse) }}


                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
