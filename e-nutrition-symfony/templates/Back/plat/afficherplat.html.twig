                                            <th>supprimer modifier </th>

                                        </tr>
                                        </thead>
                                        <tbody>
                                        <tr {% for f in plat %} >

                                            <td> {{ f.nom }}</td>
                                            <td>{{ f.nbrportion }}</td>
                                            <td>{{ f.proteines }}</td>
                                            <td>{{ f.glucides }}</td>
                                            <td>{{ f.lipides }}</td>
