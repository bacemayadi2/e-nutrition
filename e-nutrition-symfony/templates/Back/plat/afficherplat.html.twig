                                        </tr {% endfor %}>
                                        <tr>
                                            <td><div style="text-align: left;">
                                                    <a href="{{ path('ajouterplat') }}">  <button type="button" class="btn btn-success">ajouter plat</button></td>
                                            </div></tr>
                                        {{ knp_pagination_render(plat) }}


                                        </tbody>

                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
