                                            <td>
                                                <div class="btn-group" role="group" aria-label="Basic example">
                                                    <div style="text-align: center;">
                                                        <a href="{{ path('afficherEtapeAliment',{'id':f.id }) }}"><button type="button" class="btn btn-primary">afficher</button>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group" aria-label="Basic example">
                                                    <div style="text-align: center;">
                                                        <a href="{{ path('supprimerPlat',{'id':f.id }) }}"><button type="button" class="btn btn-primary">supprimer</button>
                                                    </div>
                                                    <div style="text-align: center;">
                                                        <a href="{{ path('modifierPlat',{'id':f.id }) }}">  <button type="button" class="btn btn-success">modifier</button>
                                                    </div>
                                                </div>
