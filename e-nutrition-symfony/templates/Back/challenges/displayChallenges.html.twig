{% extends 'back/base.html.twig' %}
{% block Content %}

    <br>
    <h1 align="center">Liste des DÃ©fis</h1>
    <br>

    <div class="app-content content">
        <div class="content-wrapper">

            <div class="content-body"><!-- Basic Tables start -->
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <a class="heading-elements-toggle"><i class="fa fa-ellipsis-v font-medium-3"></i></a>
                                <div class="heading-elements">
                                    <ul class="list-inline mb-0">
                                        <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                                        <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                                        <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                                        <li><a data-action="close"><i class="ft-x"></i></a></li>
                                    </ul>
                                </div>
                            </div>

                            <div class="card-content collapse show">

                                <div class="table-responsive">
                                    <br>
                                    <br>
                                    <div class="col-11 mb-2">
                                        <table border="1" cellpadding="50" align="center" class="table">
                                            <thead class="bg-primary white">
                                            <tr>
                                                <th>Id</th>
                                                <th>Titre</th>
                                                <th>Description</th>
                                                <th>Categorie</th>
                                                <th>Participants</th>
                                                <th colspan="3" style="text-align: center">Gestion</th>
                                            </tr>
                                            </thead>
                                            <tr {% for c in challenges %}>
                                                <td>{{ c.id }}</td>
                                                <td>{{ c.titre }}</td>
                                                <td>{{ c.description }}</td>
                                                <td>{{ c.categorie }}</td>
                                                <td>
                                                    {% for participant in c.participants %}
                                                        {{ participant }}
                                                    {% endfor %}
                                                </td>
                                                {% if is_granted('ROLE_ADMIN') %}
                                                    <td><div class="btn-group"> <a href="{{ path('UpdateUser', {'id':c.id}) }}" ><button type="button" class="btn btn-primary">Modifier</button> </a></div></td>
                                                    <td><div class="btn-group"> <a href="{{ path('admin_PromoteToAdmin', {'id':c.id}) }}" ><button type="button" class="btn btn-success">Supprimer</button></a></div></td>
                                                {% endif %}
                                            </tr {% endfor %}>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock%}