{% extends 'back/base.html.twig' %}
{% block Content %}

    <script>
        $(document).ready(function(){
            $("#myInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
    <div class="app-content content">
        <div class="content-wrapper">

            <div class="content-body"><!-- Basic Tables start -->
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Ordonance</h4>
                                <a class="heading-elements-toggle"><i class="fa fa-ellipsis-v font-medium-3"></i></a>
                                <div class="heading-elements">
                                    <ul class="list-inline mb-0">
                                        <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                                        <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                                        <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                                        <li><a data-action="close"><i class="ft-x"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                            <input id="myInput" class="form-control rounded" type="text" placeholder="Search.." >
                            <div class="card-content collapse show">
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead class="bg-primary white">
                                        <tr>
                                            <th>Id</th>
                                            <th>Nom du médicament </th>
                                            <th>Quantité</th>
                                            <th>Durée de consommation</th>
                                            <th>id fiche consultation</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        <tr {% for m in medicament %} >

                                            <td> {{ m.id }}</td>
                                            <td>{{ m.nom }}</td>
                                            <td>{{ m.quantite}}</td>
                                            <td>{{ m.duree }}</td>
                                            <td>{{ m.fiche.id }}</td>

                                            <td> <a href="{{ path('deleteM',{'id':m.id}) }}">Delete</a></td>


                                        </tr {% endfor %}>


                                        </tbody>

                                    </table>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}