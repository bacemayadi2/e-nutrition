{% extends 'front/base.html.twig' %}

{% block Content %}
<form method="post">
     {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>

    <table align="center">
        <tr>
            <td><label for="inputEmail">Email</label></td>
            <td><input type="email" value="{{ last_username }}" name="email" id="inputEmail" style="width: 300px" class="form-control" required autofocus></td>
        </tr>
        <tr>
            <td><label for="inputPassword">Password</label></td>
            <td><input type="password" name="password" id="inputPassword" style="width: 300px" class="form-control" required></td>
        </tr>
    </table>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}">

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary" type="submit"> Sign in </button>
</form>
{% endblock %}
